<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>ru.agentlab.maia</groupId>
	<artifactId>ru.agentlab.maia.releng</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<tycho-version>0.22.0</tycho-version>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>

	<modules>
		<module>../../plugins/io.netty</module>

		<module>../../plugins/ru.agentlab.maia.memory</module>
		<module>../../plugins/ru.agentlab.maia.memory.injector</module>
		<module>../../plugins/ru.agentlab.maia.memory.context</module>
		<module>../../plugins/ru.agentlab.maia.memory.context.arraylist</module>
		<module>../../plugins/ru.agentlab.maia.memory.context.hashmap</module>
		<module>../../plugins/ru.agentlab.maia.memory.context.e4</module>

		<module>../../plugins/ru.agentlab.maia.event</module>
		<module>../../plugins/ru.agentlab.maia.event.osgi</module>

		<module>../../plugins/ru.agentlab.maia.execution</module>
		<module>../../plugins/ru.agentlab.maia.execution.node</module>
		<module>../../plugins/ru.agentlab.maia.execution.action</module>
		<module>../../plugins/ru.agentlab.maia.execution.action.annotated</module>
		<module>../../plugins/ru.agentlab.maia.execution.action.annotation</module>
		<module>../../plugins/ru.agentlab.maia.execution.scheduler</module>
		<module>../../plugins/ru.agentlab.maia.execution.scheduler.fsm</module>
		<module>../../plugins/ru.agentlab.maia.execution.scheduler.pattern</module>
		<module>../../plugins/ru.agentlab.maia.execution.scheduler.sequence</module>

		<module>../../releng/ru.agentlab.maia.target</module>
	</modules>

	<profiles>
		<profile>
			<id>plugins</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
		<profile>
			<id>aspects</id>
			<modules>
				<module>../../aspects/ru.agentlab.maia.execution.event</module>
				<module>../../aspects/ru.agentlab.maia.memory.context.events</module>
				<module>../../aspects/ru.agentlab.maia.memory.injector.events</module>

				<module>../../aspects/ru.agentlab.maia.execution.scheduler.logs</module>
				<module>../../aspects/ru.agentlab.maia.memory.context.logs</module>
				<module>../../aspects/ru.agentlab.maia.memory.injector.logs</module>
			</modules>
		</profile>
		<profile>
			<id>tools</id>
			<modules>
				<module>../../tools/com.jayway.jsonpath</module>
				<module>../../tools/ru.agentlab.maia.admin</module>
				<module>../../tools/ru.agentlab.maia.admin.bundles</module>
				<module>../../tools/ru.agentlab.maia.admin.contexts</module>
<!-- 				<module>../../tools/ru.agentlab.maia.admin.ui</module> -->
			</modules>
		</profile>
		<profile>
			<id>functional-tests</id>
			<repositories>
				<repository>
					<id>eclipse-luna</id>
					<layout>p2</layout>
					<url>http://download.eclipse.org/releases/luna/</url>
				</repository>
			</repositories>
			<modules>
				<module>../../tests/ru.agentlab.maia.memory.doubles</module>
				<module>../../tests/ru.agentlab.maia.memory.context.test</module>
				<module>../../tests/ru.agentlab.maia.memory.context.hashmap.test</module>
				<module>../../tests/ru.agentlab.maia.memory.context.arraylist.test</module>
				<module>../../tests/ru.agentlab.maia.memory.context.e4.test</module>
				<module>../../tests/ru.agentlab.maia.memory.injector.test</module>

				<module>../../tests/ru.agentlab.maia.execution.scheduler.fsm.test</module>
				<module>../../tests/ru.agentlab.maia.execution.scheduler.pattern.test</module>
				<module>../../tests/ru.agentlab.maia.execution.scheduler.sequence.test</module>
			</modules>
		</profile>
		<profile>
			<id>performance-tests</id>
			<repositories>
				<repository>
					<id>eclipse-luna</id>
					<layout>p2</layout>
					<url>http://download.eclipse.org/releases/luna/</url>
				</repository>
			</repositories>
			<modules>
				<module>../../tests/ru.agentlab.maia.memory.doubles</module>
				<module>../../tests/ru.agentlab.maia.memory.context.test.perf</module>
				<module>../../tests/ru.agentlab.maia.memory.context.hashmap.test.perf</module>
				<module>../../tests/ru.agentlab.maia.memory.context.arraylist.test.perf</module>
			</modules>
		</profile>
		<profile>
			<id>repository</id>
			<modules>
				<module>../../features/ru.agentlab.maia.sdk.feature</module>
				<module>../../features/ru.agentlab.maia.context.e4.feature</module>

				<module>../../releng/ru.agentlab.maia.repository</module>
			</modules>
		</profile>
	</profiles>


	<build>
		<sourceDirectory>src</sourceDirectory>
		<!-- <aspectSourceDirectory>aj-src</aspectSourceDirectory> -->
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>aspectj-maven-plugin</artifactId>
					<version>1.7</version>
					<configuration>
						<verbose>true</verbose>
						<aspectDirectory>aj-src</aspectDirectory>
						<source>${maven.compiler.source}</source>
						<target>${maven.compiler.target}</target>
						<complianceLevel>1.8</complianceLevel>
					</configuration>
					<executions>
                        <execution>
                            <!-- IMPORTANT -->
                            <phase>compile</phase>
                            <goals>
                                <goal>compile</goal>
<!--                                 <goal>test-compile</goal> -->
                            </goals>
                        </execution>
                    </executions>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-dependency-plugin</artifactId>
					<executions>
						<execution>
							<phase>process-sources</phase>
							<goals>
								<goal>copy-dependencies</goal>
							</goals>
							<configuration>
								<outputDirectory>${project.basedir}/libs</outputDirectory>
							</configuration>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>target-platform-configuration</artifactId>
					<version>${tycho-version}</version>
					<configuration>
						<resolveWithExecutionEnvironmentConstraints>false</resolveWithExecutionEnvironmentConstraints>
						<target>
							<artifact>
								<groupId>ru.agentlab.maia</groupId>
								<artifactId>ru.agentlab.maia.target</artifactId>
								<version>1.0.0-SNAPSHOT</version>
							</artifact>
						</target>
						<environments>
							<environment>
								<os>linux</os>
								<ws>gtk</ws>
								<arch>x86</arch>
							</environment>
							<environment>
								<os>linux</os>
								<ws>gtk</ws>
								<arch>x86_64</arch>
							</environment>
							<environment>
								<os>win32</os>
								<ws>win32</ws>
								<arch>x86</arch>
							</environment>
							<environment>
								<os>win32</os>
								<ws>win32</ws>
								<arch>x86_64</arch>
							</environment>
							<environment>
								<os>macosx</os>
								<ws>cocoa</ws>
								<arch>x86_64</arch>
							</environment>
						</environments>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>tycho-surefire-plugin</artifactId>
					<version>${tycho-version}</version>
					<configuration>
						<failIfNoTests>false</failIfNoTests>
						<includes>
							<include>**/*Tests.java</include>
						</includes>
						<dependencies>
							<dependency>
								<artifactId>org.eclipse.platform</artifactId>
								<version>0.0.0</version>
								<type>p2-installable-unit</type>
							</dependency>
						</dependencies>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>tycho-maven-plugin</artifactId>
					<version>${tycho-version}</version>
					<extensions>true</extensions>
				</plugin>
				<plugin>
					<groupId>org.eclipse.xtend</groupId>
					<artifactId>xtend-maven-plugin</artifactId>
					<version>2.7.3</version>
					<executions>
						<execution>
							<phase>generate-sources</phase>
							<goals>
								<goal>compile</goal>
							</goals>
							<configuration>
								<!-- need to prefix by basedir to generate to currently built module -->
								<outputDirectory>${basedir}/xtend-gen</outputDirectory>
<!-- 								<tempDirectory>${project.build.directory}/xtend-temp/</tempDirectory> -->
								<writeTraceFiles>false</writeTraceFiles>
							</configuration>
						</execution>
					</executions>
				</plugin>
				<!--This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.eclipse.tycho
										</groupId>
										<artifactId>
											tycho-compiler-plugin
										</artifactId>
										<versionRange>
											[0.22.0,)
										</versionRange>
										<goals>
											<goal>compile</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.eclipse.tycho
										</groupId>
										<artifactId>
											tycho-packaging-plugin
										</artifactId>
										<versionRange>
											[0.22.0,)
										</versionRange>
										<goals>
											<goal>
												build-qualifier-aggregator
											</goal>
											<goal>build-qualifier</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugins
										</groupId>
										<artifactId>
											maven-clean-plugin
										</artifactId>
										<versionRange>
											[2.5,)
										</versionRange>
										<goals>
											<goal>clean</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugins
										</groupId>
										<artifactId>
											maven-dependency-plugin
										</artifactId>
										<versionRange>
											[2.8,)
										</versionRange>
										<goals>
											<goal>
												copy-dependencies
											</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.codehaus.mojo
										</groupId>
										<artifactId>
											aspectj-maven-plugin
										</artifactId>
										<versionRange>
											[1.7,)
										</versionRange>
										<goals>
											<goal>test-compile</goal>
											<goal>compile</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

</project>